{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node", "@playwright/test"]
  },
  "include": ["tests/**/*.ts", "tests/pages/**/*.ts", "playwright.config.ts"]
}
